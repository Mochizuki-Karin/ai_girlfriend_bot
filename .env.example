# ============================================
# AI Girlfriend Bot - Environment Configuration
# ============================================

# Telegram Bot Token (从 @BotFather 获取)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ============================================
# LLM Provider Configuration
# 选择其中一个作为主要提供商
# ============================================

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Google Gemini API
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# 本地模型配置 (Ollama/vLLM)
LOCAL_MODEL_URL=http://localhost:11434
LOCAL_MODEL_NAME=llama2-chinese

# 默认使用的LLM提供商 (openai/google/anthropic/local)
DEFAULT_LLM_PROVIDER=openai

# ============================================
# Database Configuration
# ============================================

# SQLite (默认，适合小型部署)
DATABASE_URL=sqlite:///data/bot_memory.db

# PostgreSQL (生产环境推荐)
# DATABASE_URL=postgresql://user:password@localhost:5432/aigf_db

# Redis (用于缓存和短期记忆)
REDIS_URL=redis://localhost:6379/0
USE_REDIS=false

# ChromaDB (向量数据库，用于长期记忆)
CHROMA_PERSIST_DIR=./data/chroma

# ============================================
# Bot Behavior Configuration
# ============================================

# 人设配置文件路径
PERSONA_CONFIG_PATH=./config/persona_default.yaml

# 好感度系统配置
AFFECTION_ENABLED=true
AFFECTION_DECAY_RATE=0.5
AFFECTION_DECAY_HOURS=24

# 记忆系统配置
MEMORY_ENABLED=true
MEMORY_CONTEXT_WINDOW=10
MEMORY_SIMILARITY_THRESHOLD=0.7
MAX_MEMORIES_PER_QUERY=5

# 主动消息配置
INITIATIVE_ENABLED=true
INITIATIVE_MIN_INTERVAL_MINUTES=30
INITIATIVE_MAX_INTERVAL_MINUTES=180

# 学习系统配置
LEARNING_ENABLED=true
LEARNING_SAVE_INTERVAL=100

# ============================================
# Advanced Settings
# ============================================

# 日志级别 (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# 时区
TIMEZONE=Asia/Shanghai

# 管理员用户ID (用于管理命令)
ADMIN_USER_IDS=

# 是否允许群聊
ALLOW_GROUP_CHAT=false

# 消息速率限制 (每分钟)
RATE_LIMIT_PER_MINUTE=30

# ============================================
# Feature Flags
# ============================================

ENABLE_VOICE_MESSAGES=false
ENABLE_IMAGE_GENERATION=false
ENABLE_IMAGE_ANALYSIS=false
ENABLE_WEB_SEARCH=false
