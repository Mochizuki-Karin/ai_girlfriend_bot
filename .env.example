# ============================================
# AI Girlfriend Bot - 環境設定
# ============================================

# Telegram Bot Token (@BotFatherから取得)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ============================================
# LLMプロバイダー設定
# いずれか1つを主プロバイダーとして選択
# ============================================

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Google Gemini API
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ローカルモデル設定 (Ollama/vLLM)
LOCAL_MODEL_URL=http://localhost:11434
LOCAL_MODEL_NAME=llama2-chinese

# デフォルトで使用するLLMプロバイダー (openai/google/anthropic/local)
DEFAULT_LLM_PROVIDER=openai

# ============================================
# データベース設定
# ============================================

# SQLite (デフォルト、小規模デプロイに適しています)
DATABASE_URL=sqlite:///data/bot_memory.db

# PostgreSQL (プロダクション環境推奨)
# DATABASE_URL=postgresql://user:password@localhost:5432/aigf_db

# Redis (キャッシュおよび短期記憶用)
REDIS_URL=redis://localhost:6379/0
USE_REDIS=false

# ChromaDB (ベクターデータベース、長期記憶用)
CHROMA_PERSIST_DIR=./data/chroma

# ============================================
# ボット動作設定
# ============================================

# キャラクター設定ファイルパス
PERSONA_CONFIG_PATH=./config/persona_default.yaml

# 好感度システム設定
AFFECTION_ENABLED=true
AFFECTION_DECAY_RATE=0.5
AFFECTION_DECAY_HOURS=24

# 記憶システム設定
MEMORY_ENABLED=true
MEMORY_CONTEXT_WINDOW=10
MEMORY_SIMILARITY_THRESHOLD=0.7
MAX_MEMORIES_PER_QUERY=5

# 主動メッセージ設定
INITIATIVE_ENABLED=true
INITIATIVE_MIN_INTERVAL_MINUTES=30
INITIATIVE_MAX_INTERVAL_MINUTES=180

# 学習システム設定
LEARNING_ENABLED=true
LEARNING_SAVE_INTERVAL=100

# ============================================
# 上級設定
# ============================================

# ログレベル (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# タイムゾーン
TIMEZONE=Asia/Tokyo

# 管理者ユーザーID (管理コマンド用)
ADMIN_USER_IDS=

# グループチャット許可設定
ALLOW_GROUP_CHAT=false

# メッセージレート制限 (1分あたり)
RATE_LIMIT_PER_MINUTE=30

# ============================================
# 機能フラグ
# ============================================

ENABLE_VOICE_MESSAGES=false
ENABLE_IMAGE_GENERATION=false
ENABLE_IMAGE_ANALYSIS=false
ENABLE_WEB_SEARCH=false
